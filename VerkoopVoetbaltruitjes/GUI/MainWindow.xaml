<Window x:Class="GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:GUI.ViewModels" xmlns:views="clr-namespace:GUI.Views" d:DataContext="{d:DesignInstance Type=viewmodels:KlantenViewModel}"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <TabControl>
        <TabItem Header="Voetbal Truitjes"/>
        <TabItem Header="Klanten">
            <TabControl>
                <TabItem Header="Klanten">
                    <views:KlantenView/>
                </TabItem>
                <TabItem Header="Adressen">
                    <views:AdressenView/>
                </TabItem>
            </TabControl>
        </TabItem>
        <TabItem Header="Bestellingen">
        </TabItem>

    </TabControl>
</Window>
